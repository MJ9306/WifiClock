<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_144dp">

    <LinearLayout
        android:id="@+id/head_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_10">

        <TextView
            android:id="@+id/wifiname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifi_distance"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:text="wifi:楚玉科技"
            android:textSize="@dimen/font_size_13" />

        <ImageView
            android:id="@+id/user_header"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/head_info"
        android:padding="@dimen/spacing_10">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_10"
            android:text="马齐"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-05-18"
            android:textColor="@color/color_E2E2E2"
            android:textSize="@dimen/font_size_13" />

        <TextView
            android:id="@+id/clock_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:text="打卡地点:湖北省武汉市洪山区凌家山北路29号靠近鼎业楼A座"
            android:textSize="@dimen/font_size_13" />

        <TextView
            android:id="@+id/gps_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock_place"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="10m"
            android:textSize="@dimen/font_size_13" />

        <TextView
            android:id="@+id/wifi_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gps_distance"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="0m"
            android:textSize="@dimen/font_size_13" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_E2E2E2"
        android:layout_alignParentBottom="true"
        android:layout_height="0.1dp"></View>
</RelativeLayout>